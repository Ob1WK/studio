rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read their own profile, and all users can read any profile.
    // Users can only write to their own profile.
    match /users/{userId} {
      allow read: if true; // Public read for profiles
      allow create, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Songs are publicly readable. Only the owner can create, update, or delete.
    match /songs/{songId} {
      allow read: if true; // Public read for songs
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;

      // Variations are publicly readable. Only the owner can create, update, or delete.
      match /variations/{variationId} {
        allow read: if true; // Public read for variations
        allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
        allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
      }
    }

    // Private playlists (under /users/{userId}/playlists) are only accessible by the owner.
    match /users/{userId}/playlists/{playlistId} {
      allow read, create, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Public playlists (top-level /playlists/{playlistId}) are publicly readable if isPublic is true.
    // Only the owner (matching userId in the playlist data) can create, update, or delete.
    match /playlists/{playlistId} {
      allow read: if resource.data.isPublic == true;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}