rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection: Public read, owner write
    match /users/{userId} {
      allow read: if true; // Anyone can read user profiles
      allow create, update, delete: if request.auth != null && request.auth.uid == userId; // Only the user can write to their own profile
    }

    // Songs collection: Public read, owner write
    match /songs/{songId} {
      allow read: if true; // Anyone can read songs
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId; // Only authenticated user can create a song for themselves
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId; // Only the owner can update or delete their song
    }

    // Variations subcollection: Public read, owner write
    match /songs/{songId}/variations/{variationId} {
      allow read: if true; // Anyone can read variations
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId; // Only authenticated user can create a variation for themselves
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId; // Only the owner can update or delete their variation
    }

    // Private Playlists (under users collection): Owner read/write
    match /users/{userId}/playlists/{playlistId} {
      allow read, create, update, delete: if request.auth != null && request.auth.uid == userId; // Only the owner can read/write their private playlists
    }

    // Public Playlists (top-level collection): Public read, owner write
    match /playlists/{playlistId} {
      allow read: if true; // Anyone can read public playlists
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId; // Only authenticated user can create a public playlist for themselves
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId; // Only the owner can update or delete their public playlist
    }
  }
}